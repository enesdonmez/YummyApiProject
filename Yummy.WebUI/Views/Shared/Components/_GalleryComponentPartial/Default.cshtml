@model List<ResultGalleryDto>

<section id="gallery" class="gallery section light-background">

    <div class="container section-title" data-aos="fade-up">
        <h2>Galeri</h2>
        <p><span>İlginizi Çekebilecek</span> <span class="description-title">Görsellerimiz</span></p>
    </div>
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                "loop": true,
                "speed": 600,
                "autoplay": {
                "delay": 5000
                },
                "slidesPerView": "auto",
                "centeredSlides": true,
                "pagination": {
                "el": ".swiper-pagination",
                "type": "bullets",
                "clickable": true
                },
                "breakpoints": {
                "320": {
                "slidesPerView": 1,
                "spaceBetween": 0
                },
                "768": {
                "slidesPerView": 3,
                "spaceBetween": 20
                },
                "1200": {
                "slidesPerView": 5,
                "spaceBetween": 20
                }
                }
                }
            </script>
            <div class="swiper-wrapper align-items-center">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <a class="glightbox" data-gallery="images-gallery" href="/yummy/assets/img/gallery/@item.ImageUrl">
                            <img src="/yummy/assets/img/gallery/@item.ImageUrl" class="img-fluid" alt="@item.Title">
                        </a>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>

</section>