@model List<ResultMenuDto>

<section id="menu" class="menu section">

    <div class="container section-title" data-aos="fade-up">
        <h2>Menü</h2>
        <p><span>Menümüze</span> <span class="description-title">Göz Atın</span></p>
    </div>

    <div class="container">

        @await Component.InvokeAsync("_MenuCategoryComponentPartial")

        <div class="tab-content" data-aos="fade-up" data-aos-delay="200">
            <div class="tab-pane fade active show" id="menu-starters">

                <div class="tab-header text-center">
                    <p>Menü</p>
                    <h3>Tüm Lezzetler</h3>
                </div>

                <div class="row gy-5">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 menu-item">
                            <a href="@item.ImageUrl" class="glightbox"><img src="@item.ImageUrl" class="menu-img img-fluid" alt=""></a>
                            <h4>@item.MenuItemName</h4>
                            <p class="ingredients">
                               @item.MenuItemDescription
                            </p>
                            <p class="price">
                                @item.Price ₺
                            </p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</section>
